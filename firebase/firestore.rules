rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: only authenticated users can read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Drills: public read, authenticated write (customize as needed)
    match /drills/{drillId} {
      allow read: if true; // public read
      allow write: if request.auth != null; // only authenticated users can write
    }

    // Education modules: authenticated reads only
    match /educationModules/{moduleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role in ['admin','teacher','super-admin'];
    }

    // Fallback: require authentication for any other document access
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
